    <property>
        <name>javax.jdo.option.ConnectionURL</name>
        <value>jdbc:mysql://vm-ha-dispatch75.yn.com:3306/db_hive?createDatabaseIfNotExist=true&amp;characterEncoding=UTF-8</value>
        <description>JDBC connect string for a JDBC metastore</description>
